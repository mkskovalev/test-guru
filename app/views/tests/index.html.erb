<h1>All Tests</h1>

<p><%= link_to 'New Test', new_test_path %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th colspan="3">Action</th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= link_to 'Show', test_path(test) %></td>
      <td><%= link_to 'Edit', edit_test_path(test) %></td>
      <td><%= link_to 'Delete', test_path(test), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
