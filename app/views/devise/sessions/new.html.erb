<div class="row justify-content-center mt-3 mx-3">
  <div class="col col-md-4">

    <h2>Enter the Guru Gates</h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">

            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter Email', autocomplete: "email" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              <% end %>
            </div>

            <%= f.submit "Enter", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
