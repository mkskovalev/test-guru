<div class="row justify-content-center mt-3 mx-3">
  <div class="col col-md-6">

    <% if @test_passage.success? %>
      <p><%= t('.correct_answers') %>: <b style="color: green;"><%= @result %>%</b></p>
      <h1><%= t('.header.success', title: @test_passage.test.title) %></h1>
    <% else %>
      <p><%= t('.correct_answers') %>: <b style="color: red;"><%= @result %>%</b></p>
      <h1><%= t('.header.failed', title: @test_passage.test.title) %></h1>
    <% end %>

    <%= link_to t('.back_link'), '/tests' %>


  </div>
</div>
