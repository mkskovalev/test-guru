<%= form_with model: [:admin, @test], local: true do |form| %>

  <div class="form-group">

    <%= render 'shared/errors', resource: @test %>

    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :level, class: 'form-label' %>
      <%= form.number_field :level, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :category_id, class: 'form-label' %>
      <%= form.collection_select :category_id, Category.all, :id, :title, promrt: true, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <div class="form-check">
        <%= form.check_box :active, class: 'form-check-input' %>
        <%= form.label :activate, class: 'form-check-label' %>
      </div>
    </div>

    <%= form.submit class: 'btn btn-primary' %>

  </div>

<% end %>
