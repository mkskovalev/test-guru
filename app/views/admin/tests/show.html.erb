<div class="row justify-content-center mt-3 mx-3">
  <div class="col col-md-6">

    <h1><%= t('.title') %>: <%= @test.title %></h1>
    <p><%= t('.level') %>: <%= @test.level %></p>

    <p><%= link_to t('.new_question'), new_admin_test_question_path(@test), class: 'btn btn-primary' %></p>

    <h2><%= t('.questions_header') %>:</h2>
      <% if @test.questions.present? %>
        <table class="table md-6">
          <thead>
            <tr>
            <th><%= t('.question_title') %></th>
            <th colspan="3"><%= t('.actions_title') %></th>
          </tr>
          </thead>
          <tbody>

          <%= render partial: 'admin/questions/question', collection: @test.questions %>

        </table>
      <% else %>
        <%= t('.no_questions') %>
      <% end %>

    <td><%= link_to t('.edit_link'), edit_admin_test_path(@test), class: 'mt-3' %></td>
    <p><%= link_to t('.back_link'), admin_tests_path, class: 'mt-3' %></p>

  </div>
</div>
