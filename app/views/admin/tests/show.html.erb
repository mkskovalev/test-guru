<h1><%= t('.title') %>: <%= @test.title %></h1>
<p><%= t('.level') %>: <%= @test.level %></p>

<p><%= link_to t('.new_question'), new_admin_test_question_path(@test) %></p>

<h2><%= t('.questions_header') %>:</h2>
  <% if @test.questions.present? %>
    <table>
      <tr>
        <th><%= t('.question_title') %></th>
        <th colspan="3"><%= t('.actions_title') %></th>
      </tr>

      <%= render partial: 'admin/questions/question', collection: @test.questions %>

    </table>
  <% else %>
    <%= t('.no_questions') %>
  <% end %>

<td><%= link_to t('.edit_link'), edit_admin_test_path(@test) %></td>
<p><%= link_to t('.back_link'), admin_tests_path %></p>
