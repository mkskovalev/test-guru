<h1>Title: <%= @test.title %></h1>
<p>Level: <%= @test.level %></p>

<p><%= link_to 'New question', new_admin_test_question_path(@test) %></p>

<h2>Questions:</h2>
  <% if @test.questions.present? %>
    <table>
      <tr>
        <th>Question</th>
        <th colspan="3">Action</th>
      </tr>

      <%= render partial: 'admin/questions/question', collection: @test.questions %>

    </table>
  <% else %>
    No questions in this test...
  <% end %>

<td><%= link_to 'Edit', edit_admin_test_path(@test) %></td>
<p><%= link_to 'Back', admin_tests_path %></p>
