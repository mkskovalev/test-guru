<div class="row justify-content-center mt-3 mx-3">
  <div class="col col-md-12">

    <h1><%= t('.header') %></h1>

    <p><%= link_to t('.new_test_link'), new_admin_test_path, class: 'btn btn-primary' %></p>

    <%= render 'shared/errors', resource: @test %>

    <table class="table md-6">
      <thead>
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.test_title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.level') %></th>
          <th><%= t('.questions_count') %></th>
          <th><%= t('.activity') %></th>
          <th colspan="3"><%= t('.action') %></th>
        </tr>
      </thead>
      <tbody>

      <%= render @tests %>

    </table>
  </div>
</div>
