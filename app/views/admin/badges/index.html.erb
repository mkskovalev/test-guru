<div class="row justify-content-center mt-3 mx-3">
  <div class="col col-md-12">

    <h1><%= t('.header') %></h1>

    <p><%= link_to t('.new_badge_link'), new_admin_badge_path, class: 'btn btn-primary' %></p>

    <%= render 'shared/errors', resource: @badge %>

    <table class="table md-6">
      <thead>
        <tr>
          <th><%= t('.badge_title') %></th>
          <th><%= t('.image') %></th>
          <th><%= t('.rule') %></th>
          <th colspan="3"><%= t('.action') %></th>
        </tr>
      </thead>
      <tbody>

      <%= render @badges %>

    </table>
  </div>
</div>
