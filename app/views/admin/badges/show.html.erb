<div class="row justify-content-center mt-3 mx-3">
  <div class="col col-md-6">

    <h1><%= t('.title') %>: <%= @badge.title %></h1>
    <p><img src="<%= @badge.image %>"></p>
    <p><%= @badge.rule%> - <%= @badge.sub_rule %></p>



    <td><%= link_to t('.edit_link'), edit_admin_badge_path(@badge), class: 'mt-3' %></td>
