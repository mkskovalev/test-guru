<% flash.each do |key, message| %>
  <% if key == 'notice' %>
    <%= content_tag :p, message, class: "alert alert-info mx-3 mt-3" %>
  <% elsif key == 'alert' %>
    <%= content_tag :p, message, class: "alert alert-danger mx-3 mt-3" %>
  <% else %>
    <%= content_tag :p, message, class: "alert alert-#{key} mx-3 mt-3" %>
  <% end %>
<% end %>
